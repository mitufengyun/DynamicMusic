<resources>

    <!-- 通用主题 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--去除ActionBar-->
    <style name="NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <!--去除状态栏-->
    <style name="NoStatusTheme"  parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--启动页黑白屏优化-->
    <style name="Launch" parent="AppTheme">
        <!-- 设置背景图片 -->
        <item name="android:windowBackground">@drawable/launch_layout</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <!--状态栏透明-->
<!--    <style name="AppTheme.NoActionBar.StatusBarTransparent">-->

<!--    </style>-->

    <!--状态栏黑色-->
<!--    <style name="AppTheme.NoActionBar.StatusBarBlack">-->

<!--    </style>-->

    <!--AppBarLayout样式-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--toolbar样式-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--定义一个小文字样式-->
    <style name="TextSmall">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <!--登录，注册界面输入框样式-->
<!--    <item name="android:background">@drawable/selector_edit_text</item>-->

    <style name="EditText">
        <!--图标到内容的间距-->
        <item name="android:drawablePadding">@dimen/padding_meddle</item>

        <!--左侧图标-->
        <item name="android:drawableLeft">@drawable/ic_phone</item>

        <item name="android:paddingTop">@dimen/padding_meddle</item>
        <item name="android:paddingBottom">@dimen/padding_meddle</item>

        <!--最大显示一行-->
        <item name="android:lines">1</item>

        <item name="android:layout_marginTop">@dimen/padding_meddle</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:background">@drawable/selector_edit_text</item>


    </style>

    <!--侧滑界面Item容器-->
    <style name="ItemContainer">
        <!--可点击-->
        <item name="android:clickable">true</item>

        <!--左侧padding-->
        <item name="android:paddingLeft">@dimen/padding_large</item>

        <!--右侧padding-->
        <item name="android:paddingRight">@dimen/padding_large</item>

        <!--内容垂直居中-->
        <item name="android:gravity">center_vertical</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_item_height</item>

        <!--内容方向为水平-->
        <item name="android:orientation">horizontal</item>
    </style>

    <!--设置界面左侧容器-->
    <style name="ItemLeftContainer">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--设置Item标题-->
    <style name="ItemTitle">
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--设置Item描述-->
    <style name="ItemSummary">
        <item name="android:layout_marginTop">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--设置Item层级标题-->
    <style name="ItemTopTitle">
        <item name="android:paddingTop">@dimen/padding_meddle</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--设置Item更多文本-->
    <style name="ItemMore">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--侧滑界面Item图标-->
    <style name="ItemIcon">
        <!--宽高-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--侧滑界面Item文本-->
    <style name="ItemText">
        <!--左侧margin-->
        <item name="android:layout_marginLeft">@dimen/padding_small</item>

        <!--文本颜色-->
        <item name="android:textColor">@color/text</item>

        <!--宽高-->
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--侧滑界面Item值-->
    <style name="ItemTextHint">
        <!--文本颜色-->
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
